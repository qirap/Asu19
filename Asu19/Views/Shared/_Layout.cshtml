<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Asu19</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Asu19.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/img/AVTO_AV.png" />
</head>
<body class="background">

    <header class="p-3 gradient-custom text-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <a href="#" class="pull-left"><img src="~/img/AVTO_AV.png" width="50" height="50"> </a>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/" class="nav-link px-2 text-dark">Главная</a></li>
                    <li><a href="/price" class="nav-link px-2 text-dark">Услуги</a></li>
                    <li><a href="/about" class="nav-link px-2 text-dark">О нас</a></li>
                </ul>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="text-end">
                        <label class="p-2">@User.Claims.ElementAt(1).Value</label>
                        <button type="button" onclick="document.location='/profile'" class="btn btn-dark me-2">Профиль</button>
                        <button type="button" onclick="document.location='/logout'" class="btn btn-dark">Выйти</button>
                    </div>
                }
                else
                {
                    <div class="text-end">
                        <button type="button" onclick="document.location='/login'" class="btn btn-dark me-2">Логин</button>
                        <button type="button" onclick="document.location='/registration'" class="btn btn-dark">Регистрация</button>
                    </div>
                }
            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="footer text-dark gradient-custom">
        <div class="container">
            &copy; 2022 - Autoservice
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
