@model IEnumerable<Asu19.Areas.Account.Models.UserCarInfo>
@{
	ViewData["Title"] = "Login Page";
}

<section class="login-page gradient-custom">
	<div class="container">
		<div class="align-content-center">
			<section class="pb-4 gradient-custom">
				<div class="row d-flex justify-content-center mt-4">
					<div class="col-12 col-md-8 col-lg-6 col-xl-6">
						<div class="card bg-dark text-white" style="border-radius: 1rem;">
							<div class="card-body p-5 text-center">
								<div class="mb-md-5 mt-md-4 pb-5">
									<h2 class="fw-bold mb-2 text-uppercase">Создание заявки</h2>
									<p class="text-white-50 mb-5">Пожалуйста, выберите авто и услугу!</p>

									<form method="post" asp-area="Account" asp-controller="Home" asp-action="AddRequest">
										<div class="form-outline form-white mb-4">
											<select name="car" class="form-select" aria-label="Default select example">
												@foreach (var item in Model)
												{
													<option value="@($"{item.Brand}_{item.Model}")">@item.Brand @item.Model</option>
												}
											</select>
										</div>

										<div class="form-outline form-white mb-4">
											<select name="serviceId" class="form-select" aria-label="Default select example">
												@foreach (var item in ViewBag.Services)
												{
													<option value="@item.Id">@item.Name - @item.Price</option>
												}
											</select>
										</div>

										<button class="btn btn-outline-white btn-lg px-5 gradient-custom" type="submit">Создать</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
</section>