@{
    ViewData["Title"] = "Логин";
}

<section class="login-page">
    <div class="container">
        <div class="align-content-center">
            <section class="pb-4">
                <div class="row d-flex justify-content-center mt-4">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-6">
                        <div class="card bg-dark text-white border-custom">
                            <div class="card-body p-5 text-center">
                                <div class="mb-md-5 mt-md-4 pb-5">
                                    <h2 class="fw-bold mb-2 text-uppercase">Вход в систему</h2>
                                    <p class="text-white-50 mb-5">Пожалуйста введите логин и пароль!</p>
                                    <form method="post" asp-area="Account" asp-controller="Home" asp-action="Login">
                                        <div class="form-outline form-white mb-4">
                                            <input name="Login" type="login" id="typeLoginX" placeholder="Логин" class="form-control form-control-lg">
                                            <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 40px;"></div><div class="form-notch-trailing"></div></div>
                                        </div>

                                        <div class="form-outline form-white mb-4">
                                            <input name="Password" type="password" id="typePasswordX" placeholder="Пароль" class="form-control form-control-lg">
                                            <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 64px;"></div><div class="form-notch-trailing"></div></div>
                                        </div>

                                        <button class="btn btn-outline-white btn-lg px-5 gradient-custom" type="submit">Войти</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>
